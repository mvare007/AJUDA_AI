<div class="container-wide mb-5">
  <%= render 'shared/map' %>
</div>

<div class="container-fluid">

  <button type="button" class="btn-vol" data-toggle="modal" data-target="#exampleModal">Criar Pedido</button>
  <!-- Modal -->
  <div class="modal fade bd-example-modal-lg" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h4 class="modal-title text-white" id="exampleModalLabel"><strong>Novo Pedido</strong></h4>
          <button type="button" class="close text-white" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <%= render 'shared/request_form', request: @request %>
        </div>
      </div>
    </div>
  </div>
  <% if @requests_near.count >= 1 %>
  <h1>Em <%= current_user.city %>:</h1>
  <div class="cards my-3">
    <% @requests_near.each do |request| %>
    <div class="card hoverable">
      <%= link_to request_path(request), class: 'nounderline' do %>
      <%= image_tag "https://source.unsplash.com/random", class: "card-img-top"  %>
      <div class="card-block text-center">
        <h4 class="card-title nounderline"><strong><%= request.title %></strong></h4>
        <p class="card-text nounderline"><%= request.description %></p>
      </div>
    <% end %>
    </div>
    <% end %>
  </div>
  <h1>Todos:</h1>
  <% end %>
  <div class="cards my-3">
    <% @requests.each do |request| %>
    <div class="card hoverable">
      <%= link_to request_path(request), class: 'nounderline' do %>
      <%= image_tag "https://source.unsplash.com/random", class: "card-img-top"  %>
      <div class="card-block text-center">
        <h4 class="card-title nounderline"><strong><%= request.title %></strong></h4>
        <p class="text-muted"><%= request.city %></p>
        <p class="card-text nounderline"><%= request.description %></p>
      </div>
    <% end %>
    </div>
    <% end %>
  </div>
</div>
