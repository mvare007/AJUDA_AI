<div class="container my-5">

  <div class="row">
    <div class="col-3">
      <%= render 'requests/categories'%>
    </div>
    <div class="col-9">
      <%= render 'shared/map' %>
    </div>
  </div>

  <% if @requests_near.count >= 1 %>

    <h1 class="text-header-2">Em <%= current_user.city %>:</h1>
    <hr class="hr-vol">

    <div class="cards my-5">
      <% ordered_by_creation(@requests_near).each do |request| %>
        <%= render 'shared/request_card', request: request %>
      <% end %>
    </div>

    <h1 class="text-header-2">Todos os pedidos</h1>
    <hr class="hr-vol">
  <% end %>

  <div class="cards my-5">
    <% ordered_by_creation(@requests).each do |request| %>
      <%= render 'shared/request_card', request: request %>
    <% end %>
  </div>

</div>
