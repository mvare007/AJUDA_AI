<div class="category-container">
  <h1 class="text-header-3">Categorias</h1>
  <hr class="hr-vol">
  <br>

  <div class="d-flex flex-row justify-content-between align-items-center">

    <%= link_to category_path(category: "Reparações"), class: "category-wrap nounderline orange" do %>
      <div class="d-flex flex-column">
        <i class="fas fa-hammer category-badge"></i>
        <p>Reparações</p>
      </div>
    <% end %>

    <%= link_to category_path(category: "Recados"), class: "category-wrap nounderline yellow" do %>
      <div class="d-flex flex-column">
        <i class="fas fa-people-carry category-badge"></i>
        <p>Recados</p>
      </div>
    <% end %>

  </div>

  <div class="d-flex flex-row justify-content-between">

    <%= link_to category_path(category: "Companhia"), class: "category-wrap nounderline deep-blue" do %>
      <div class="d-flex flex-column">
        <img class="category-badge-img" src="https://image.flaticon.com/icons/svg/2917/2917865.svg" alt="Companhia">
        <p>Companhia</p>
      </div>
    <% end %>

    <%= link_to category_path(category: "Donativos"), class: "category-wrap nounderline pink" do %>
      <div class="d-flex flex-column">
        <img class="category-badge-img" src="https://image.flaticon.com/icons/png/512/101/101942.png" alt="Donativos">
        <p>Donativos</p>
      </div>
    <% end %>

  </div>


  <div class="d-flex flex-row justify-content-between m-2">

    <%= link_to category_path(category: "Associação"), class: "category-wrap light-blue nounderline" do %>
      <div class="d-flex flex-column">
        <img class="category-badge-img" src="https://image.flaticon.com/icons/png/512/99/99497.png" alt="Associação">
        <p>Associação</p>
      </div>
    <% end %>

    <%= link_to category_path(category: "Animais"), class: "category-wrap blue nounderline" do %>
      <div class="d-flex flex-column ">
        <i class="fas fa-cat category-badge"></i>
        <p>Animais</p>
      </div>
    <% end %>

  </div>

  <div class="d-flex flex-row justify-content-between m-2">

    <%= link_to category_path(category: "Cuidados"), class: "category-wrap nounderline marine" do %>
      <div class="d-flex flex-column">
        <i class="fas fa-hands-helping category-badge"></i>
        <p>Cuidados</p>
      </div>
    <% end %>

    <%= link_to category_path(category: "Saúde"), class: "category-wrap nounderline green" do %>
      <div class="d-flex flex-column">
        <i class="fas fa-medkit category-badge"></i>
        <p>Saúde</p>
      </div>
    <% end %>

  </div>

  <div class="d-flex flex-row justify-content-between m-2">

    <%= link_to category_path(category: "Denúncia"), class: "category-wrap nounderline red" do %>
      <div class="d-flex flex-column">
        <img class="category-badge-img" src="https://image.flaticon.com/icons/png/512/61/61114.png" alt="Denúncia">
        <p>Denúncia</p>
      </div>
    <% end %>

    <%= link_to category_path(category: "Outro"), class: "category-wrap nounderline pink-2" do %>
      <div class="d-flex flex-column">
        <i class="far fa-hand-peace category-badge"></i>
        <p>Outro</p>
      </div>
    <% end %>

  </div>

</div>
