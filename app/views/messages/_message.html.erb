<div class="message <%= "right" if user_is_messages_author %>">
  <% if message.user.photo.attached? %>
    <%= cl_image_tag message.user.photo.key, width: 200, height: 200, crop: :thumb, gravity: :face, class: 'avatar-chat rounded-circle hoverable my-2', data: { toggle: 'tooltip', placement: 'top' }, title: " #{message.user.full_name} " %>
  <% else %>
    <img data-toggle="tooltip" data-placement="top" title="<%= message.user.full_name %>" class="avatar-chat rounded-circle my-2" src="https://eu.ui-avatars.com/api/?name=<%= message.user.full_name.gsub(" ", "+") %>}" alt="avatar">
  <% end %>
  <div class="message-content"><%= emojify message.content %></div>
</div>

