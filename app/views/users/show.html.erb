<div class="container-fluid">
  <%= render 'shared/user_show_card', user: @user %>
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-6 mt-3">
      <% if @user == current_user %>
        <%= render 'shared/bookmarked' %>
      <% end %>
    </div>
    <div class="col-sm-12 col-md-8 col-lg-6 mt-3">
      <% unless @user.reviews.blank? %>
        <%= render "reviews/show" %>
      <% end %>
    </div>
    <div class="col-sm-12 col-md-8 col-lg-6">
      <!-- content -->
    </div>
  </div>
</div>
