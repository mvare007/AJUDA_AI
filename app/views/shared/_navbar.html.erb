<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to root_path , class: "navbar-brand" do %>
  <h4 class="ml-5" style="font-family: 'Josefin Sans', sans-serif; color: yellow;"> <span class="fas fa-hands-helping"></span><strong>AJUDA AÍ</strong></h4>
    <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item active">
          <%= link_to "Pedidos", requests_path, class: "btn-nav nav-link hoverable" %>
        </li>
        <li class="nav-item">
          <%= link_to "Mensagens", chatrooms_path, class: "btn-nav nav-link hoverable" %>
        </li>
        <li class="nav-item dropdown mx-3">
          <%= link_to "Perfil", user_path(current_user), class: "btn-nav nav-link hoverable" %>
          <% if current_user.photo.attached? %>
            <%= cl_image_tag current_user.photo.key, width: 100, height: 100, crop: :thumb, gravity: :face, class: "avatar-chat rounded-circle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% else %>
            <%= image_tag "https://eu.ui-avatars.com/api/?name=#{current_user.full_name.gsub(" ", "+")}", class: "avatar-xl rounded-circle dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% end %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Definições", "#", class: "dropdown-item" %>
            <%= link_to "Meus pedidos", user_requests_path, class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "btn-nav nav-link mx-3 text-white" %>
        </li>
        <li class="nav-item">
          <%= link_to 'Registar', new_user_registration_path, class: "btn-nav nav-link mx-3 text-white" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>

