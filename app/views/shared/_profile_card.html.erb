<%= link_to user, class: "text-decoration-none" do %>
  <div class="card border border-light hoverable" style='background: linear-gradient(180deg, #8836BF 12%, #762EA6);'>
    <div class="card-body text-center">
      <% if user.photo.attached? %>
        <%= cl_image_tag user.photo.key, width: 100, height: 100, crop: :thumb, gravity: :face, class: "avatar-xl rounded-circle mb-3" %>
      <% else %>
        <%= image_tag "https://eu.ui-avatars.com/api/?name=#{user.full_name.gsub(" ", "+")}", class: "avatar-xl rounded-circle mb-3" %>
      <% end %>
      <h4 class="card-title text-light"><%= user.full_name %></h4>
      <div class="d-inline-flex">
        <p class="fas fa-map-marker-alt text-primary mr-1"></p>
        <p class="card-subtitle text-primary"><%= user.city %></p>
      </div>
      <br>
      <%= link_to chatrooms_path(id: user), method: :post do %>
      <button class="btn btn-sm badge-pill btn-light"><i class="far fa-comment-dots"></i> Chat</button>
      <% end %>
    </div>
  </div>
<% end %>
