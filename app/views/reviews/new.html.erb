<div class="container">
  <div class="row">
    <div class="col-xs-4">
      <%= simple_form_for @review do |f| %>
        <%= f.input :content, label: false, placeholder: 'Comentários'  %>
        <%= f.input :rating, collection: (1..5).to_a, label: "Avalia a experiência:" %>
        <%= f.submit "Submeter" %>
      <% end %>
    </div>
  </div>
</div>
